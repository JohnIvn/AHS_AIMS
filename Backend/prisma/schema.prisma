generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model staff_account {
  staff_id       String   @id @default(uuid())
  first_name     String
  last_name      String
  contact_number String?
  email          String   @unique
  password       String
  date_created   DateTime @default(now())
  status         String   @default("active")
}

model appoinment_details {
  user_id        String   @id @default(uuid())
  first_name     String
  last_name      String
  contact_number String?
  email          String   @unique
  reason         String?
  status         String   @default("active")
  date_created   DateTime @default(now())
}

model verification_code {
  id          String   @id @default(cuid())
  email       String
  code        String
  created_at  DateTime @default(now())
  expires_at  DateTime
  used        Boolean  @default(false)
}

model admin_account {
  admin_id       String   @id @default(uuid())
  first_name     String
  last_name      String
  contact_number String?
  email          String   @unique
  password       String
  date_created   DateTime @default(now())
  status         String   @default("active")
}