generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["tracing"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model staff_account {
  staff_id       String   @id @default(uuid())
  first_name     String
  last_name      String
  contact_number String?
  email          String   @unique
  password       String
  date_created   DateTime @default(now())
  status         String   @default("active")
}

model appoinment_details {
  user_id        String   @id @default(uuid())
  first_name     String
  last_name      String
  contact_number String?
  email          String   @unique
  date_created   DateTime @default(now())
  status         String   @default("active")
  reason         String?
  grade          String?
  lrn            String?
  section        String?
}

model verification_code {
  id         String   @id @default(cuid())
  email      String
  code       String
  created_at DateTime @default(now())
  expires_at DateTime
  used       Boolean  @default(false)
}

model admin_account {
  admin_id       String   @id @default(uuid())
  first_name     String
  last_name      String
  contact_number String?
  email          String   @unique
  password       String
  date_created   DateTime @default(now())
  status         String   @default("active")
}

model blocked_dates {
  id         String   @id @default(cuid())
  date       DateTime @unique @db.Date
  reason     String?
  created_at DateTime @default(now())
}

model blocked_time_slots {
  id         String   @id @default(cuid())
  date       DateTime @db.Date
  start_time String
  end_time   String
  reason     String?
  created_at DateTime @default(now())

  @@index([date])
}
